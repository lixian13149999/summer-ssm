doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		title 邮箱验证
		style.
			.base{
				height:auto;
				padding:150px;
				background-color:#eee;
				}
			.main-table{
				width:600px;
				margin:0 auto;
				background-color:#fff;
				font-family:"Microsoft YaHei";
				padding-bottom:25px;
				}
			.title{
				height:64px;
				background-color:#363636;
				color:#fff;
				}
			.logo{
				width:64px;
				padding:0 12px 0 12px;
				text-align:right;
				}
			img{
				width:48px;
				height:48px;
				vertical-align:middle;
				}
			.title-content{
				font-size:1.2em;
				padding-top:6px;			
				}
			.content{
				font-size:14px;
				}
			h4{
				line-height:35px;
				margin:10px 20px 15px;
				border-bottom:1.5px solid #dedede;
				text-indent:1em;
				font-weight:200;
				font-size:14px;
				color:#666;
				}
			p{
				margin:0 -10px;
				padding:0 60px;
				line-height:24px;
				margin-bottom:10px;
				font-size:14px;
				color:#666;
				}
			.a-conect,.click,.email,a:link{
				text-decoration:none;
				color:#56b6ea;
				word-wrap:break-word;
				word-break:break-all;
				font-size:14px;
				}
			.a-conect:hover,a:hover{
				text-decoration:underline;
				}
	body
		div.base
			table.main-table(cellspacing="0" cellpadding="0")
				tbody
					tr.title
						td.logo
							img(src="http://www.pp3.cn/uploads/allimg/111127/1-11112G42R2.png" alt="logo")
							td.title-content bcdbook

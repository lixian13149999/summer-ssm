extends ../layout.jade

block main
    .input-container
        form(method="get" action="javascript:sign.signerror()")
            .input-block
                input#username.input-box(type="text" data-input-box="input" placeholder="请输入用户名" autocomplete="off")
                span.delete.hide(data-text-delete="delete") X

            .input-block
                input#password.input-box(type="password" data-input-box="input" placeholder="请输入密码")
                span.delete.hide(data-text-delete="delete") X

            input.button.button-primary.button-rounded.mobile-button(type="submit" value="登录")
            
        .tips
            a(href="signup.jade") 没有系统账号？去注册
            
    .footer-container
        .footer-title
            span.title-text 社交账号登录
            
        a.weixin
            i.icon.icon-wechat
            
block error
    #sign-error.modal.fade.error-modal(aria-hidden="true")
        .modal-title ！
        .modal-text 用户名或密码错误
            
    
            
            
    